{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

{{! The big featured header }}
<div class="container">
{{#author}}

    <!-- Image -->

        {{#if cover}}
            <div class="image-header">
                <img class="center-block" src="{{cover}}" alt="{{title}}" height="100%">
            </div>
        {{else}}
            {{#if image}}
            <div class="image-header">
                <img class="center-block" src="{{image}}" alt="{{title}}" height="100%">
            </div>
            {{/if}}
        {{/if}}

    
    <div class="row">
        <h2 align="center" ><a href="{{url}}">{{name}}</a></h2>
        <p>{{bio}}</p>
        <div class="author-meta">
            {{#if location}}
                <span class="author-location icon-location">{{location}}</span>
            {{/if}}
            {{#if website}}
                <span class="author-link icon-link"><a href="{{website}}">{{website}}</a></span>
            {{/if}}
        </div>
    </div>

    {{! The main content area on the homepage }}
    <hr />
    <h2 align="center">Author's Posts</h2>
{{/author}}
</div>

<div class="container marketing">

    {{! The tag below includes the post loop - partials/loop.hbs }}
    {{> "loop"}}
</div>
    
